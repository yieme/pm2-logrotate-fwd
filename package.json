{
  "name": "pm2-logrotate-fwd",
  "version": "1.0.0",
  "description": "Rotate pm2 logs, optional forward to s3 and/or logdna",
  "main": "app.js",
  "dependencies": {
    "deep-extend": "^0.6.0",
    "graceful-fs": "^4.2.3",
    "logdna": "^3.5.0",
    "moment-timezone": "^0.5.27",
    "node-schedule": "^1.3.2",
    "pm2": "latest",
    "pmx": "latest",
    "public-ip": "^4.0.0",
    "s3": "^4.4.0"
  },
  "scripts": {
    "test": "TEST=1 node app.js"
  },
  "license": "MIT",
  "apps": [
    {
      "name": "pm2-logrotate-fwd",
      "script": "app.js",
      "max_memory_restart": "500M"
    }
  ],
  "config": {
    "max_size": "1",
    "retain": "1",
    "compress": false,
    "dateFormat": "YYYYMMDD_HHmmss",
    "workerInterval": "3",
    "rotateInterval": "*/3 * * * * *",
    "rotateModule": true
  }
}
